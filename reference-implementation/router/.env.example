# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# TLS/mTLS
TLS_CERT=/path/to/certs/server.crt
TLS_KEY=/path/to/certs/server.key
TLS_CA=/path/to/certs/ca.crt
MTLS_ENABLED=true

# OAuth 2.0
OAUTH_ISSUER=https://auth.nbu.gov.ua
OAUTH_AUDIENCE=vop-router
OAUTH_JWKS_URI=https://auth.nbu.gov.ua/.well-known/jwks.json

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vop_directory
DB_USER=vop_user
DB_PASSWORD=secure_password
DB_MAX_CONNECTIONS=20

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=1000
RATE_LIMIT_MAX_REQUESTS=100

# Timeouts
REQUEST_TIMEOUT_MS=5000
RESPONDER_TIMEOUT_MS=3000

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
